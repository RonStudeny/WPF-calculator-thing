<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Name="Input" Grid.Row="0" Grid.Column="0"
                 Height="45" Width="250"
                 Text="input..." FontSize="28" TextAlignment="Center"
                 Margin="0, 0, 250, 0"/>
        
        <Label  Name="Result" Grid.Row="0" Grid.Column="0"
                Height="45" Width="250"
                Content="=" FontSize="28" Margin="0, 0, -280, 0"/>

        <Button Name="Calculate" Grid.Row="1" Grid.Column="0"
                Height="120" Width="250"
                Content="Calculate" FontSize="28" Click="Calculate_Click"/>

    </Grid>
</Window>
