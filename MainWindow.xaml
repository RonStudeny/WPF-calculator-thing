<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="490" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Name="Input" Grid.Row="0" Grid.Column="0"
                 Height="55" Width="300"
                 Text="INPUT" FontSize="35" TextAlignment="Center"/>
       

        <Button Name="Calculate" Grid.Row="1" Grid.Column="0"
                Height="50" Width="80"
                Content="=" FontSize="35" Click="Calculate_Click"
                Margin="370 250 0 0"/>

        <Button Name="Add" Grid.Row="1" Grid.Column="0"
                Height="50" Width="80"
                Content="+" FontSize="35"
                Margin="370 130 0 0"/>
        
        <Button Name="Substract" Grid.Row="1" Grid.Column="0"
                Height="50" Width="80"
                Content="-" FontSize="35"
                Margin="370 10 0 0"/>

        <Button Name="Multiply" Grid.Row="1" Grid.Column="0"
                Height="50" Width="80"
                Content="*" FontSize="35"
                Margin="370 0 0 110"/>

        <Button Name="Divide" Grid.Row="1" Grid.Column="0"
                Height="50" Width="80"
                Content="÷" FontSize="30"
                Margin="370 0 0 230"/>

        <Button Name="zero" Grid.Row="1" Grid.Column="0"
                Height="100" Width="80"
                Content="0" FontSize="35"
                Margin="0 200 365 0"/>


        <Grid Grid.Row="1" Grid.Column="0" Height="300" Width="250">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Name="seven" Grid.Row="0" Grid.Column="0"
                    Content="7" FontSize="35"/>
            <Button Name="eight" Grid.Row="0" Grid.Column="1"
                    Content="8" FontSize="35"/>
            <Button Name="nine" Grid.Row="0" Grid.Column="2"
                    Content="9" FontSize="35"/>

            <Button Name="four" Grid.Row="1" Grid.Column="0"
                    Content="4" FontSize="35"/>
            <Button Name="five" Grid.Row="1" Grid.Column="1"
                    Content="5" FontSize="35"/>
            <Button Name="six" Grid.Row="1" Grid.Column="2"
                    Content="6" FontSize="35"/>

            <Button Name="one" Grid.Row="2" Grid.Column="0"
                    Content="1" FontSize="35"/>
            <Button Name="two" Grid.Row="2" Grid.Column="1"
                    Content="2" FontSize="35"/>
            <Button Name="three" Grid.Row="2" Grid.Column="2"
                    Content="3" FontSize="35"/>
        </Grid>

    </Grid>
</Window>
